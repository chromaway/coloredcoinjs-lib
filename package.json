{
  "name": "coloredcoinjs-lib",
  "version": "0.3.6",
  "main": "./index.js",
  "description": "Colored coin JavaScript library for Bitcoin",
  "author": "Fomichev Kirill <fanatid@ya.ru>",
  "contributors": [
    {
      "name": "Fabian Barkhau",
      "email": "fabian.barkhau@gmail.com"
    },
    {
      "name": "Alex Mizrahi",
      "email": "alex.mizrahi@gmail.com"
    }
  ],
  "repository": {
    "url": "git://github.com/chromaway/coloredcoinjs-lib",
    "type": "git"
  },
  "bugs": {
    "url": "https://github.com/chromaway/coloredcoinjs-lib/issues"
  },
  "license": "MIT",
  "keywords": [
    "bitcoin",
    "coloredcoins",
    "colored",
    "coins",
    "epobc"
  ],
  "files": [
    "index.js",
    "lib",
    "LICENSE",
    "README.md"
  ],
  "engines": {
    "node": "=0.10.x"
  },
  "dependencies": {
    "bitcore": "=0.12.5",
    "bluebird": "=2.9.25",
    "bs58": "=2.0.1",
    "error-system": "=0.1.0",
    "lodash": "=3.8.0",
    "make-concurrent": "=0.0.4",
    "ready-mixin": "=0.0.5",
    "sqlite3": "=3.0.8"
  },
  "devDependencies": {
    "browserify": "^9.0.8",
    "chai": "^2.3.0",
    "coveralls": "^2.11.2",
    "istanbul": "^0.3.14",
    "karma": "^0.12.31",
    "karma-chrome-launcher": "^0.1.10",
    "karma-detect-browsers": "^2.0.0",
    "karma-firefox-launcher": "^0.1.6",
    "karma-mocha": "^0.1.10",
    "localStorage": "^1.0.3",
    "mocha": "^2.2.4",
    "standard": "^3.8.0",
    "uglify": "^0.1.3"
  },
  "scripts": {
    "build": "npm run compile && npm run uglify",
    "compile:test": "find test/ -type f -name \"*.js\" | xargs browserify -o coloredcoinlib.test.js",
    "compile": "browserify index.js -s coloredcoinlib -o coloredcoinlib.js",
    "coverage": "find test/ -type f -name \"*.js\" | xargs istanbul cover _mocha --",
    "coveralls": "npm run coverage && coveralls <coverage/lcov.info",
    "clean": "rm -f coloredcoinlib.js coloredcoinlib.min.js coloredcoinlib.test.js",
    "karma": "./node_modules/karma/bin/karma start karma.conf.js",
    "lint": "standard",
    "test": "npm run test:node && npm run test:browser",
    "test:node": "find test/ -type f -name \"*.js\" | xargs istanbul test mocha -- --reporter spec",
    "test:browser": "npm run compile:test && npm run karma",
    "uglify": "uglify -s coloredcoinlib.js -o coloredcoinlib.min.js"
  },
  "browser": {
    "./lib/storage/data/sqlite.js": "./lib/storage/data/sqlite-browser.js",
    "./lib/storage/definitions/sqlite.js": "./lib/storage/definitions/sqlite-browser.js",
    "./lib/storage/providers/sqlite.js": "./lib/storage/providers/sqlite-browser.js"
  },
  "standard": {
    "ignore": [
      "coloredcoinlib.js",
      "coloredcoinlib.min.js",
      "coloredcoinlib.test.js"
    ]
  }
}
