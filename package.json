{
  "name": "coloredcoinjs-lib",
  "version": "0.3.6",
  "main": "./lib/index.js",
  "description": "Colored coin JavaScript library for Bitcoin",
  "author": "Fomichev Kirill <fanatid@ya.ru>",
  "contributors": [
    {
      "name": "Fabian Barkhau",
      "email": "fabian.barkhau@gmail.com"
    },
    {
      "name": "Alex Mizrahi",
      "email": "alex.mizrahi@gmail.com"
    }
  ],
  "repository": {
    "url": "git://github.com/chromaway/coloredcoinjs-lib",
    "type": "git"
  },
  "bugs": {
    "url": "https://github.com/chromaway/coloredcoinjs-lib/issues"
  },
  "license": "MIT",
  "keywords": [
    "bitcoin",
    "coloredcoins",
    "colored",
    "coins",
    "epobc"
  ],
  "files": [
    "lib",
    "LICENSE",
    "README.md"
  ],
  "engines": {
    "node": "=0.10.x"
  },
  "dependencies": {
    "bitcoinjs-lib": "=1.4.3",
    "bluebird": "^2.9.25",
    "bs58": "=2.0.1",
    "errno": "=0.1.1",
    "localStorage": "=1.0.3",
    "lodash": "=3.8.0",
    "lru-cache": "=2.6.2",
    "store": "=1.3.17"
  },
  "devDependencies": {
    "browser-request": "=0.3.3",
    "browserify": "^9.0.8",
    "chai": "^2.3.0",
    "coveralls": "^2.11.2",
    "istanbul": "^0.3.14",
    "mocha": "^2.2.4",
    "request": "=2.51.0",
    "standard": "^3.8.0",
    "uglify": "^0.1.3"
  },
  "scripts": {
    "build": "npm run-script compile && npm run-script uglify",
    "compile_test": "browserify test/*.js test/**/*.js >coloredcoinlib.test.js",
    "compile": "browserify lib/index.js -s coloredcoinlib -o coloredcoinlib.js",
    "coveralls": "npm run-script coverage && coveralls <coverage/lcov.info",
    "coverage": "istanbul cover _mocha -- test/*.js test/**/*.js",
    "clean": "rm -f coloredcoinlib.js coloredcoinlib.min.js coloredcoinlib.test.js",
    "lint": "standard",
    "test": "istanbul test mocha -- --reporter spec test/*.js test/**/*.js",
    "uglify": "uglify -s coloredcoinlib.js -o coloredcoinlib.min.js"
  },
  "browser": {
    "request": "browser-request"
  },
  "standard": {
    "ignore": [
      "coloredcoinlib.js",
      "coloredcoinlib.min.js",
      "coloredcoinlib.test.js"
    ]
  }
}
